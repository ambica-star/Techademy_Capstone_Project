<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="NSE Stock Testing Parallel Suite" parallel="tests" thread-count="3" verbose="2">
    
    <parameter name="browser" value="chrome"/>
    
    <listeners>
        <listener class-name="com.nse.stock.listeners.ExtentReportListener"/>
        <listener class-name="com.nse.stock.listeners.ScreenshotListener"/>
        <listener class-name="com.nse.stock.listeners.RetryListener"/>
    </listeners>

    <!-- Chrome Browser Tests -->
    <test name="Chrome Browser Tests" parallel="methods" thread-count="2">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.nse.stock.tests.StockInformationTest">
                <methods>
                    <include name="testNSEWebsiteAccessibility"/>
                    <include name="testDefaultStockInformation"/>
                    <include name="testStockInformationDisplay"/>
                </methods>
            </class>
            <class name="com.nse.stock.tests.StockProfitLossTest">
                <methods>
                    <include name="testTataMotorsProfitLoss"/>
                    <include name="testCustomPurchasePriceProfitLoss"/>
                </methods>
            </class>
            <class name="com.nse.stock.tests.Stock52WeekHighLowTest">
                <methods>
                    <include name="testTataMotors52WeekData"/>
                    <include name="test52WeekDataConsistency"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Firefox Browser Tests -->
    <test name="Firefox Browser Tests" parallel="methods" thread-count="2">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.nse.stock.tests.StockInformationTest">
                <methods>
                    <include name="testNSEWebsiteAccessibility"/>
                    <include name="testDefaultStockInformation"/>
                </methods>
            </class>
            <class name="com.nse.stock.tests.StockProfitLossTest">
                <methods>
                    <include name="testTataMotorsProfitLoss"/>
                </methods>
            </class>
            <class name="com.nse.stock.tests.Stock52WeekHighLowTest">
                <methods>
                    <include name="testTataMotors52WeekData"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Edge Browser Tests -->
    <test name="Edge Browser Tests" parallel="methods" thread-count="2">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.nse.stock.tests.StockInformationTest">
                <methods>
                    <include name="testNSEWebsiteAccessibility"/>
                    <include name="testDefaultStockInformation"/>
                </methods>
            </class>
            <class name="com.nse.stock.tests.StockProfitLossTest">
                <methods>
                    <include name="testTataMotorsProfitLoss"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
